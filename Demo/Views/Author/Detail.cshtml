@model Demo.Models.Author

<div class="container col-md-10 text-center mt-3">
    <div class="row">
        <div class="col">
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <table class="table table-bordered">
                    <tr>
                        <th colspan="2" class="h3 bg-light text-success">Author Admin Info</th>
                    </tr>

                    <tr>
                        <th>Author Id</th>
                        <th>
                                <p>@Model.Id</p>
                        </th>
                    </tr>
                </table>
            }
        </div>
        <div class="col">
            <table class="table table-bordered">
                <tr>
                    <th colspan="2" class="h3 bg-light text-success">Author Info</th>
                </tr>

                <tr>
                    <th>Author Name</th>
                    <th>
                            <p>@Model.Name</p>
                    </th>
                </tr>
                <tr>
                    <th>Author Email</th>
                    <th>
                            <p>@Model.Email</p>
                    </th>
                </tr>
                <tr>
                    <th>Author Age</th>
                    <th>
                            <p>@Model.Age</p>
                    </th>
                </tr>
            </table>
        </div>
    </div>
</div>