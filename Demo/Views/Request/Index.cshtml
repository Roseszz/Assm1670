@model ICollection<Request>


<div class="container text-center mt-3">

    <table class="table table-bordered">
        <tr>
            <th colspan="3" class="h3 bg-light text-success">Request List</th>
            <th>
                <form asp-controller="Request" asp-action="Search">
                    <input type="search" placeholder="Search.."/>
                </form>
            </th>
        </tr>
        <tr>
            <th>Request Id</th>

            <th>Category name</th>

            <th>Category Status</th>

            <th>Action</th>
        </tr>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.Id</td>

                <td>@request.CategoryName</td>
                @if(@request.Status == true)
                {
                    <th>
                        <a class="text-success">Approved</a>
                    </th>
                }
                else
                {
                    <th>
                        <a class="text-danger">Disapproved</a>
                    </th>
                }
                <td>
                    <form asp-controller="Request" asp-action="Approved" asp-route-id="@request.Id" method="post">
                        <input type="hidden" name="name" class="form-control" />
                        <input class="btn btn-success" type="submit" value="Accept"/>
                    </form>

                    <a class="btn btn-danger" asp-controller="Request" asp-action="Delete" asp-route-id="@request.Id"
                   onclick="    return confirm('Are you sure to delete this request ?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
