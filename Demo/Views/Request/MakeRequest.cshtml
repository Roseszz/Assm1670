@model Demo.Models.Request

<div class="card p-3 bg-light" asp-controller="Request" asp-action="MakeRequest" method="post">
    <form class="card p-3 bg-light" asp-controller="Request" asp-action="MakeRequest" method="post">
        <h3 class="text text-danger">Request new Category</h3>
        <div class="form-group">
            <label asp-for="CategoryName" class="text text-success"></label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Request" />
        </div>
    </form>
</div>