<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Demo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--<link rel="stylesheet" href="~/css/site.css" />-->
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />
    <link href="css/styles.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="bg-light container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://media.istockphoto.com/vectors/open-book-color-vector-template-icon-vector-id1197901679?k=20&m=1197901679&s=612x612&w=0&h=QjmxcWwrj_D_IHgwt-9dvAdChyI1Vtr8bmQquYVkLE4=" width="100" height="100" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="h3 text text-danger ml-3" asp-area="" asp-controller="Category" asp-action="Index">Category</a>
                            </li>
                            <li class="nav-item">
                                <a class="h3 text text-black-50 ml-3" asp-area="" asp-controller="Request" asp-action="Index">Request</a>
                            </li>
                            <li class="nav-item">
                                <a class="h3 text text-danger ml-3" asp-area="" asp-controller="Book" asp-action="Index">Book</a>
                            </li>
                            <li class="nav-item">
                                <a class="h3 text text-black-50 ml-3" asp-area="" asp-controller="Author" asp-action="Index">Author</a>
                            </li>
                        </ul>
                    }
                    else if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="h3 text text-danger" asp-area="" asp-controller="Book" asp-action="Shop">Shop</a>
                            </li>
                            <li class="nav-item">
                                <a class="h3 text text-black-50 ml-3" asp-area="" asp-controller="Order" asp-action="IndexForUser">Order</a>
                            </li>
                            <li class="nav-item">
                                <a class="h3 text text-danger ml-3" asp-area="" asp-controller="Author" asp-action="Index">Author</a>
                            </li>
                        </ul>
                    }
                    else if (User.Identity.IsAuthenticated && User.IsInRole("Staff"))
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="h3 text text-danger" asp-area="" asp-controller="Book" asp-action="Index">Book</a>
                            </li>
                            <li class="nav-item">
                                <a class="h3 text text-black-50 ml-3" asp-area="" asp-controller="Author" asp-action="Index">Author</a>
                            </li>
                            <li class="nav-item">
                                <a class="h3 text text-danger ml-3" asp-area="" asp-controller="Request" asp-action="MakeRequest">Request</a>
                            </li>
                            <li class="nav-item">
                                <a class="h3 text text-black-50 ml-3" asp-area="" asp-controller="Order" asp-action="IndexForUser">Order</a>
                            </li>
                        </ul>
                    }
                    else
                    {         
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="h3 text text-danger" asp-area="" asp-controller="Book" asp-action="Shop">Shop</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="bg-secondary container">
        <main role="main" class="bg-light pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Demo -
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>